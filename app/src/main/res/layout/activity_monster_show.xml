<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/monster_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:clickable="false"
    android:orientation="vertical"
    tools:context="fr.wcs.wikimobmonsterlegends.MonsterShowActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:alpha="0.2"
        app:srcCompat="@drawable/background_app" />

    <TextView
        android:id="@+id/monster_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        tools:text="Title"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monster_name"
        android:layout_centerHorizontal="true"
        tools:text="Subtitle"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/monster_picture"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignEnd="@+id/age"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/age"
        android:layout_marginStart="21dp"
        android:layout_marginTop="21dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/infos_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="110dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/element"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/type_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/type_picture_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>

            <TextView
                android:id="@+id/weakness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/weakness"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/weakness_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/weakness_picture_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_health"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/monster_picture"
        android:layout_below="@+id/monster_picture"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        app:srcCompat="@drawable/life" />

    <ImageView
        android:id="@+id/iv_power"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_health"
        android:layout_below="@+id/iv_health"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/power" />

    <ImageView
        android:id="@+id/iv_speed"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_power"
        android:layout_below="@+id/iv_power"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/speed" />

    <ImageView
        android:id="@+id/iv_stamina"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_speed"
        android:layout_below="@+id/iv_speed"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/stamina" />

    <TextView
        android:id="@+id/stat_health"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/monster_picture"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/iv_health"
        android:paddingTop="15dp"
        tools:text="Health"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stat_power"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/stat_health"
        android:layout_below="@+id/stat_health"
        android:paddingTop="15dp"
        tools:text="Power"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stat_speed"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/stat_power"
        android:layout_below="@+id/stat_power"
        android:paddingTop="15dp"
        tools:text="Speed"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stat_stamina"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/stat_speed"
        android:layout_below="@+id/stat_speed"
        android:paddingTop="15dp"
        tools:text="Stamina"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/monster_picture"
        android:background="@android:color/transparent"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:rotation="180"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:visibility="visible"
        app:srcCompat="@drawable/next_button" />

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/infos_container"
        android:background="@android:color/transparent"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:srcCompat="@drawable/next_button" />

    <TextView
        android:id="@+id/base_stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/iv_stamina"
        android:paddingEnd="100dp"
        android:paddingTop="20dp"
        android:text="@string/lvl0"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/iv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/base_stat"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bannerfoot" />


</RelativeLayout>
