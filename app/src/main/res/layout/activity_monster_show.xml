<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/monster_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical"
    tools:context="fr.wcs.wikimobmonsterlegends.MonsterShowActivity">

    <TextView
        android:id="@+id/monster_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monster_name"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/monster_picture"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignEnd="@+id/age"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/age"
        android:layout_marginStart="21dp"
        android:layout_marginTop="21dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/monster_picture"
        android:layout_below="@+id/monster_picture"
        app:srcCompat="@drawable/life" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView3"
        android:layout_below="@+id/imageView3"
        app:srcCompat="@drawable/power" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView4"
        android:layout_below="@+id/imageView4"
        app:srcCompat="@drawable/speed" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"
        android:layout_below="@+id/imageView5"
        app:srcCompat="@drawable/stamina" />

    <TextView
        android:id="@+id/element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/monster_picture"
        android:layout_marginStart="37dp"
        android:layout_toEndOf="@+id/monster_picture"
        android:text="Element"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/type_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/element"
        android:layout_below="@+id/element"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/weakness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/type_picture"
        android:layout_below="@+id/type_picture"
        android:text="Weakness"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/weakness_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weakness"
        android:layout_below="@+id/weakness"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/stat_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView4"
        android:layout_alignStart="@+id/stat_power"
        android:fontFamily="sans-serif"
        android:text="50"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stat_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView5"
        android:layout_alignStart="@+id/stat_speed"
        android:text="200"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stat_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView6"
        android:layout_alignStart="@+id/stat_stamina"
        android:text="175"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stat_stamina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/imageView6"
        android:text="100"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn_previous"
        android:layout_toEndOf="@+id/monster_picture"
        android:text="Next evolution" />

    <Button
        android:id="@+id/btn_previous"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/btn_next"
        android:layout_alignTop="@+id/stat_power"
        android:text="Previous evolution"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weakness_picture"
        android:layout_below="@+id/weakness_picture"
        android:text="Level"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:editable="false"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColorLink="@color/colorPrimary"
        tools:text="0" />

</RelativeLayout>
